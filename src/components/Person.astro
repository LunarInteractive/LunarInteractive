---
interface Props {
  person: {
    name: string;
    desc: string;
    path: string;
    role: string;
  };
}
const { person } = Astro.props;
---

<div
  class="group rounded-3xl grid place-items-center gap-8 relative overflow-clip object-cover"
>
  <img
    class="w-full h-auto object-cover rounded-3xl ease-in-out transition duration-300 scale-100 group-hover:scale-105 shadow-white group-hover:shadow-md"
    src={person.path}
    alt="user avatar"
    width="400"
    height="400"
    loading="lazy"
  />
  <div
    class="p-4 border absolute -bottom-3/4 w-full shadow-none transition-all duration-300 bg-white text-gray-800 rounded-2xl flex flex-col group-hover:-bottom-2 group-hover:shadow-lg"
  >
    <div class="">
      <h6 class="text-md font-bold">
        {person.name}
      </h6>
      <p class="text-sm text-gray-500">{person.role}</p>
    </div>
    <p class="p-2 italic font-medium">
      "{person.desc}"
    </p>
  </div>
</div>
