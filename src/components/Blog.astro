---
import Container from "./Container.astro";
const Blogs = [
  {
    name: "Punchline",
    path: "./images/thumbnails/punchline.jpg",
    desc: "A game that make you laugh while learning English with Voice Recognition.",
  },
  {
    name: "Metaspeak",
    path: "./images/thumbnails/metaspeak.jpg",
    desc: "An education games for learning daily English dialogue with Voice Recognition.",
  },
  {
    name: "Wordwise",
    path: "./images/thumbnails/wordwise.png",
    desc: "A mobile game that learns speaking English in certain conditions such as being a receptionist",
  },
];
---

<div id="blog" class="z-30">
  <Container>
    <div class="mb-12 space-y-2 text-center">
      <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
        From Idea to Impact: Our Successful Collaboration
      </h2>
      <p class="lg:mx-auto lg:w-6/12 text-gray-600 dark:text-gray-300">
        Laying the Groundwork for Success: A Step-by-Step Look at Our
        Collaborative Process
      </p>
    </div>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        Blogs.map((post) => (
          <div class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl backdrop-blur-xl shadow-gray-600/10 flex flex-col">
            <div class="overflow-hidden rounded-xl">
              <img
                src={post.path}
                alt="art cover"
                loading="lazy"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
            <div class="mt-6 flex flex-col grow gap-3 h-auto">
              <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">
                {post.name}
              </h3>
              <p class="flex-1 px-4 text-gray-300">{post.desc}</p>
              <div class="flex flex-col ">
                <a
                  href="#"
                  class="text-info hover:text-base-200 hover:border-secondary/50 self-end bg-none hover:bg-info font-medium hover:font-semibold transition-all duration-200 border-2 shadow-none hover:shadow-info/40 hover:shadow-xl border-info px-4 py-2 rounded-md"
                >
                  Read more
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</div>
