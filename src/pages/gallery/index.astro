---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import NavSpacer from "../../components/NavSpacer.astro";

const images = await Astro.glob("../../../public/images/gallery/*.jpg");
---

<Layout title="Welcome to Lunar Interactive">
  <NavSpacer />
  <main class="space-y-40 mb-40 relative">
    <div
      class="grid grid-cols-2 sm:grid-cols-3 xl:grid-cols-4 gap-1 place-items-center"
    >
      {
        images.map((image) => (
          <div class="inset-0 object-cover overflow-hidden m-0">
            <Image src={image.default} class="h-full" alt="rawr" />
          </div>
        ))
      }
    </div>
  </main>
</Layout>
